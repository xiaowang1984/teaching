			count(DISTINCT a.s_id) as person,
			CONCAT(FLOOR(avg(HOUR(a.tim)*60+MINUTE(a.tim))/60),':',FLOOR(avg(HOUR(a.tim)*60+MINUTE(a.tim))%60),':00')
		from workcommit as a
